<Window x:Class="CargoFlow.Views.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="450" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
             BorderThickness="2"
             Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#003300" Offset="0"/>
                    <GradientStop Color="#336600" Offset="0.75"/>
                    <GradientStop Color="#996633" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#000000" Offset="0"/>
                    <GradientStop Color="#003300" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="RESET PASSWORD"
                             Foreground="DarkGray"
                             FontSize="10"
                             FontFamily="Montserrat"
                             VerticalAlignment="Center"
                             Margin="10,0,0,0"/>

                    <Button x:Name="btnClose"
                           Grid.Column="2"
                           Content="X"
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Montserrat"
                           Command="{Binding CloseCommand}"
                           Style="{StaticResource CloseButton}"/>
                </Grid>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="30">
                    <TextBlock Text="Reset Password"
                             Foreground="White"
                             FontSize="24"
                             FontFamily="Montserrat"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <!-- Username -->
                    <TextBlock Text="Username"
                             Foreground="DarkGray"
                             FontFamily="Montserrat"
                             Margin="0,10"/>
                    <TextBox Text="{Binding Username}"
                            Style="{StaticResource ModernTextbox}"/>

                    <!-- Email -->
                    <TextBlock Text="Email"
                             Foreground="DarkGray"
                             FontFamily="Montserrat"
                             Margin="0,10"/>
                    <TextBox Text="{Binding Email}"
                            Style="{StaticResource ModernTextbox}"/>

                    <!-- New Password -->
                    <TextBlock Text="New Password"
                             Foreground="DarkGray"
                             FontFamily="Montserrat"
                             Margin="0,10"/>
                    <PasswordBox x:Name="txtNewPass"
                               Style="{StaticResource ModernPasswordBox}"
                               PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Confirm Password -->
                    <TextBlock Text="Confirm Password"
                             Foreground="DarkGray"
                             FontFamily="Montserrat"
                             Margin="0,10"/>
                    <PasswordBox x:Name="txtConfirmPass"
                               Style="{StaticResource ModernPasswordBox}"
                               PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                    <!-- Reset Button -->
                    <Button Content="Reset Password"
                            Command="{Binding ResetPasswordCommand}"
                            Style="{StaticResource ModernButton}"
                            Margin="0,30,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>