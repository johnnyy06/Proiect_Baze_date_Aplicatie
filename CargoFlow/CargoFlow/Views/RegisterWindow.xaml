<Window x:Class="CargoFlow.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CargoFlow.Views"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="650" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
             BorderThickness="2"
             Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#003300" Offset="0"/>
                    <GradientStop Color="#336600" Offset="0.75"/>
                    <GradientStop Color="#996633" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#000000" Offset="0"/>
                    <GradientStop Color="#003300" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="REGISTER"
                        Foreground="DarkGray"
                        FontSize="10"
                        FontFamily="Montserrat"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Command="{Binding MinimizeCommand}"
                     Cursor="Hand"
                     Grid.Column="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#000000"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#006600"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                 CornerRadius="9"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose"
                     BorderThickness="0"
                     Content="X"
                     Foreground="White"
                     FontSize="12"
                     FontFamily="Montserrat"
                     Command="{Binding CloseCommand}"
                     Cursor="Hand"
                     Grid.Column="2"
                     >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#000000"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#006600"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                 CornerRadius="9"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel Width="250"
                     Grid.Row="1"
                     Orientation="Vertical"
                     Margin="123,12,123,4">
                    <Image Source="/Views/icons8-truck-60.png"
                    Width="100" Height="100"/>
                    <TextBlock Text="Create Account"
                        Foreground="White"
                        FontSize="25"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        HorizontalAlignment="Center"/>
                    <TextBlock Text="Username"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,35,0,0"/>
                    <TextBox x:Name="txtUser"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"
                      Text="{Binding Username}"
                      Foreground="White"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"
                      Height="28"
                      VerticalContentAlignment="Center"
                      Margin="0,5,0,0"
                      Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="D:\Proiect aplicatii cu baze de date\icons8-user-10.png"
                                 Stretch="None"
                                 AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Password"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,15,0,0"/>
                    <PasswordBox x:Name="txtPass"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"
                      Foreground="White"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"
                      Height="28"
                      VerticalContentAlignment="Center"
                      Margin="0,5,0,0"
                      Padding="20,0,0,0"
                      PasswordChanged="PasswordBox_PasswordChanged">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="D:\Proiect aplicatii cu baze de date\icons8-password-10.png"
                                 Stretch="None"
                                 AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>
                    <TextBlock Text="Role"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,15,0,0"/>
                    <ComboBox x:Name="cmbRole"
                        FontSize="13"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Text="{Binding Role}"
                        Foreground="DarkGray"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0"
                        Padding="10,0,0,0">
                        <ComboBoxItem Content="Driver" />
                        <ComboBoxItem Content="Manager" />
                    </ComboBox>
                    <TextBlock Text="Full Name"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,15,0,0"/>
                    <TextBox x:Name="txtFullName"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"
                      Text="{Binding FullName}"
                      Foreground="White"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"
                      Height="28"
                      VerticalContentAlignment="Center"
                      Margin="0,5,0,0"
                      Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="D:\Proiect aplicatii cu baze de date\icons8-autograph-10.png"
                                 Stretch="None"
                                 AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Email"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,15,0,0"/>
                    <TextBox x:Name="txtEmail"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"
                      Text="{Binding Email}"
                      Foreground="White"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"
                      Height="28"
                      VerticalContentAlignment="Center"
                      Margin="0,5,0,0"
                      Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="D:\Proiect aplicatii cu baze de date\icons8-email-10.png"
                                 Stretch="None"
                                 AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Phone Number"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,15,0,0"/>
                    <TextBox x:Name="txtPhone"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"
                      Text="{Binding Phone}"
                      Foreground="White"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"
                      Height="28"
                      VerticalContentAlignment="Center"
                      Margin="0,5,0,0"
                      Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="D:\Proiect aplicatii cu baze de date\icons8-phone-10.png"
                                 Stretch="None"
                                 AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <Button x:Name="btnRegister"
                     BorderThickness="0"
                     Content="Register"
                     Foreground="White"
                     FontSize="12"
                     FontFamily="Montserrat"
                     Command="{Binding RegisterCommand}"
                     Cursor="Hand"
                     Margin="0,30,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#009933"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                 CornerRadius="20"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>